// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String         @id @default(cuid())
  name        String
  description String
  prices      ProductPrice[]
  images      ProductImage[]
}

model ProductPrice {
  id        String  @id @default(cuid())
  price     Int
  product   Product @relation(fields: [productId], references: [id])
  productId String
}

model ProductImage {
  id       String @id @default(cuid())
  imageUrl String

  Product   Product? @relation(fields: [productId], references: [id])
  productId String
}
